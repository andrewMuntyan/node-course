mixin loginForm()
  form.form(action="/login" method="POST")
    h2 Login
    label(for="email" value=`${body && body.email || ''}`) Email
    input(type="email" name="email" required)
    label(for="password" value=`${body && body.password || ''}`) Password
    input(type="password" name="password" required)
    label(for="")
    input.button(type="submit" value="Do It ‚èé") 
