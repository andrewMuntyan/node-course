mixin registerForm()
  form.form(action="/register" method="POST")
    h2 Register
    label(for="name") Name
    input(type="text" name="name" value=`${(body && body.name) || ''}` required)
    label(for="email") Email
    input(type="email" name="email" value=`${(body && body.email) || ''}` required)
    label(for="password") Password
    input(type="password" name="password" value=`${(body && body.password) || ''}` required)
    label(for="password-confirm") Confirm Password
    input(type="password" name="password-confirm" value=`${(body && body['password-confirm']) || ''}` required)
    label(for="")
    input.button(type="submit" value="Do It ‚èé") 
